<h1>Edit Flat</h1>

<%= form_with(model: @flat, url: flat_path(@flat), method: :patch) do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>
  <%= form.label :address %>
  <%= form.text_field :address %>
  <%= form.label :description %>
  <%= form.text_field :description %>
  <%= form.label :price_per_night %>
  <%= form.text_field :price_per_night %>
  <%= form.label :number_of_guests %>
  <%= form.text_field :number_of_guests %>
  <%= form.submit %>
<% end %>

<%= link_to("Home Page", root_path) %>
